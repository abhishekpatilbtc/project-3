{
  "name": "lending-app",
  "version": "1.0.0",
  "description": "P2P Lending/Borrowing",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abhishekpatilbtc/project-3.git"
  },
  "author": "Abhishek Patil, Alla Akiyeva",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abhishekpatilbtc/project-3/issues"
  },
  "homepage": "https://github.com/abhishekpatilbtc/project-3#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "async": "^2.6.1",
    "axios": "^0.18.0",
    "bcryptjs": "*",
    "body-parser": "*",
    "connect-flash": "*",
    "cookie-parser": "^1.4.1",
    "express": "^4.17.3",
    "express-session": "*",
    "express-validator": "*",
    "formidable": "^1.2.1",
    "if-env": "^1.0.4",
    "materialize-css": "^1.0.0-rc.2",
    "mongoose": "^5.6.7",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-materialize": "^3.3.4",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.0.1",
    "socket.io": "^2.1.1"
  }
}
